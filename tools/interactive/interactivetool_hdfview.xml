<tool id="interactive_tool_hdfview" name="Interactive Hdfview tool" version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@">
    <description>Desktop application to display netcdf/hdf4/hdf5 files</description>
    <macros>
        <token name="@VERSION@">3.3.0</token>
    </macros>
    <requirements>
        <container type="docker">quay.io/galaxy/hdfview-desktop-vnv:3.3.0</container>
    </requirements>
    <entry_points>
        <entry_point name="Hdfview on $infile.display_name" requires_domain="True">
            <port>80</port>
        </entry_point>
    </entry_points>
    <command detect_errors="exit_code">
        <![CDATA[
            cp '$infile' /root/infile &&
            bash /startup.sh &
            /opt/hdfview/bin/HDFView /root/infile
        ]]>
    </command>
    <inputs>
        <param name="infile" type="data" format="netcdf,h5" label="HDF file"/>
    </inputs>
    <outputs>
        <output name="outfile">
    </outputs>
    <tests>
    </tests>
    <help>
        <![CDATA[
            Hdfview : https://www.hdfgroup.org/
        ]]>
    </help>
</tool>
